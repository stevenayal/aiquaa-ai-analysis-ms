# Configuración para Railway
# Variables de entorno requeridas para el despliegue en Railway

# Puerto del servidor (Railway lo asigna automáticamente)
PORT=8000
LOG_LEVEL=INFO

# Configuración de Google Gemini (REQUERIDO)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Configuración de Langfuse (opcional pero recomendado)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key_here
LANGFUSE_SECRET_KEY=your_langfuse_secret_key_here
LANGFUSE_HOST=https://us.cloud.langfuse.com

# Configuración de Jira (opcional)
JIRA_BASE_URL=your_jira_base_url_here
JIRA_TOKEN=your_jira_token_here
JIRA_ORG_ID=your_jira_org_id_here

# Entorno
ENVIRONMENT=production
